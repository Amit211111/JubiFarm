<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="@string/Select_Date"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="*"
            android:textColor="#DD1212" />
        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:drawableRight="@drawable/ic_delete"
            android:fontFamily="@font/itcavantagradestdbk"
            android:gravity="right"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/et_IOfromdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textviewboader"
            android:drawableRight="@drawable/ic_baseline_date_range_24"
            android:editable="false"
            android:fontFamily="@font/itcavantagradestdbk"
            android:hint="@string/From_Date"
            android:paddingStart="@dimen/margin5"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_10" />
        <EditText
            android:id="@+id/et_IOTodate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_weight="1"
            android:background="@drawable/textviewboader"
            android:drawableRight="@drawable/ic_baseline_date_range_24"
            android:editable="false"
            android:fontFamily="@font/itcavantagradestdbk"
            android:hint="@string/To_Date"
            android:paddingStart="@dimen/margin5"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_farmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2dp"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/select_farmer"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="*"
                android:textColor="#DD1212" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textviewboader"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spn_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin2" />
            <TextView
                android:id="@+id/tv_Farmer_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:text="@string/Farmer_Name"
                android:visibility="gone"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="@string/Select_Item"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="*"
            android:textColor="#DD1212" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewboader"
        android:orientation="vertical"
        >
        <Spinner
            android:id="@+id/spnSeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="@string/Quantity"
            android:textColor="#000000" />
    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewboader"
        android:fontFamily="@font/itcavantagradestdbk"
        android:hint="@string/quantity"
        android:padding="@dimen/margin12"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2dp"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Select_Unit"
                android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textviewboader"
            android:orientation="vertical"
            >
            <Spinner
                android:id="@+id/spn_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin2"
                />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2dp"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Remarks"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewboader"
                android:fontFamily="@font/itcavantagradestdbk"
                android:hint="@string/Remarks"
                android:inputType="textPersonName"
                android:padding="@dimen/margin12"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_10" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>