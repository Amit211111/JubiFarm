<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#DADCDD"
    android:padding="@dimen/_10dp"
    android:layout_margin="@dimen/_3dp"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/crop_dtl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/neem">

    </ImageView>

    <TextView
        android:id="@+id/txt_years2020"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:layout_gravity="center"
        android:text="Years : 2020 "
        android:textColor="@android:color/black"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#DADCDD"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn_filter_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="@dimen/_10dp"
            android:padding="@dimen/margin4"
            android:textSize="@dimen/text_15"
            android:text="Season : Winter "/>

        <TextView
            android:id="@+id/btn_filter_Crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:layout_margin="@dimen/_10dp"
            android:padding="@dimen/margin4"
            android:textColor="#000000"
            android:text="Crop : Neem"/>
        <TextView
            android:id="@+id/btn_Seassion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:layout_margin="@dimen/_10dp"
            android:textColor="#000000"
            android:padding="@dimen/margin4"
            android:text="Quantity : 10" />
    </LinearLayout>
</LinearLayout>