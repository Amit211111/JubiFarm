<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5dp"
    tools:context=".Activity.AddQueryActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Query"
        android:textSize="@dimen/_15dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_Query"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin150"
                android:background="@drawable/datebadder"
                android:padding="@dimen/margin4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8dp">

            <ImageView
                android:id="@+id/queryImg"
                android:layout_width="@dimen/margin150"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:singleLine="true"
                android:src="@drawable/imageholder"
                android:textSize="@dimen/text_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center|center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttanshape"
                    android:padding="@dimen/_8dp">

                    <TextView
                        android:id="@+id/clickImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30dp"
                        android:gravity="center"
                        android:text="@string/Browse"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Record_Audio"
            android:textSize="@dimen/_15dp"
            android:drawableLeft="@drawable/ic_mic_black_24dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:weightSum="3">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:tint="@color/blue"
                android:textColor="@color/white"
                android:background="@drawable/viewdetailfarmer"
                android:text="@string/Record" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:tint="@color/red"
                android:layout_marginLeft="4dp"
                android:background="@drawable/removebutton"
                android:text="@string/Stop" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:tint="@color/green_color"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:background="@drawable/viewdetailfarmer"
                android:text="@string/Play" />

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/margin60"
            android:background="@drawable/removebutton"
            android:text="STOP PLAYING RECORDING " />


        <Button
            android:id="@+id/tv_QuerySubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttanshape"
            android:fontFamily="@font/itcavantagradestdbk"
            android:gravity="center"
            android:text="@string/Submit_Query"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>