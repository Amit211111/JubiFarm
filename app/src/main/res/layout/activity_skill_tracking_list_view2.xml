<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5dp"

    android:layout_height="134dp"

    tools:context=".Livelihood.SkillTrackingListView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"


        android:layout_marginVertical="10dp">

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d3d3d3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_land"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Skill Center"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/skill_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="T-534 "
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_1dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="T-534 "
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Email"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="23 hc"
                android:textColor="#01579b"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Mobile Number"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mobileno"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="abcd"
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"

                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Qualification"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_qualification"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="50"
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Training Stream"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_training_stream"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="50"
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:padding="@dimen/_1dp"
                android:text="Date of Completion of Training"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_training_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="50"
                android:textColor="#01579b"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>