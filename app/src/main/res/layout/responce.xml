<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_responce"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginTop="@dimen/_20dp"
        android:src="@drawable/responseee"
        android:layout_marginLeft="@dimen/_30dp"

        android:padding="@dimen/margin4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/_30dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_response"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin140"
            android:background="@drawable/datebadder"
            android:padding="@dimen/margin4" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:gravity="end"
        android:orientation="vertical">


        <Button
            android:id="@+id/tvplantgrowth"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25dp"

            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttanshape"
            android:fontFamily="@font/itcavantagradestdbk"
            android:gravity="center"
            android:text="Submit "
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            />

    </LinearLayout>
</LinearLayout>