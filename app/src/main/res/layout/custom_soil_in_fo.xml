<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearLayoutChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="10dp"
            app:cardCornerRadius="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_tree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/training_icon" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/ll_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50"
            android:layout_marginLeft="4dp"
            android:background="@color/color_white"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/_8dp"
            android:orientation="vertical"

            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/Training_Name"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_Header"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/itcavantagradestdbk"

                    android:singleLine="true"
                    android:text="@string/soil_information"
                    android:textColor="#39B53E"

                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.9"
                            android:text="@string/update_soil"
                            android:textColor="@android:color/black"
                            android:textSize="11sp" />
                        <ImageView
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_20dp"
                            android:src="@drawable/ic_baseline_date_range_24" />

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text=" 07/12/2021"
                            android:textColor="@android:color/black"
                            android:textSize="11sp" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/phone"


                    />

                <TextView
                    android:id="@+id/txt_mobileno"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="7834854392"
                    android:textColor="@android:color/holo_blue_light"

                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>