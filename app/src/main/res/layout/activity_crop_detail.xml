<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CropDetailActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="7dp">

            <ImageView
                android:id="@+id/iv_plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/mangodemo" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itcavantagradestdbk"
            android:paddingLeft="8dp"
            android:text="@string/Plant_Name" />

        <TextView
            android:id="@+id/tv_plant_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="Mango " />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/Land" />

            <TextView
                android:id="@+id/tv_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="34.534,535 " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/Crop_Category" />

            <TextView
                android:id="@+id/tv_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="34.534,535 " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/planted_date" />

            <TextView
                android:id="@+id/tv_planted_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="34.534,535 " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/fruited_date" />

            <TextView
                android:id="@+id/tv_fruited_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="34.534,535 " />

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/itcavantagradestdbk"
            android:paddingLeft="8dp"
            android:text="@string/Geo_Coordinates" />

        <TextView
            android:id="@+id/tv_cordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="34.534,535 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/itcavantagradestdbk"
            android:paddingLeft="8dp"
            android:text="@string/Plant_ID" />

        <TextView
            android:id="@+id/tv_plant_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/itcavantagradestdbk"
            android:text="000002443 " />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/plant_visit" />

            <TextView
                android:id="@+id/tv_plant_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="0" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_total_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="8dp"
                android:text="@string/total_tree" />

            <TextView
                android:id="@+id/tv_total_tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="0" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:textColor="@color/colorAccent"
            android:text="@string/View_In_Map"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin100"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="7dp"
        android:weightSum="2"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_subLantation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/white"
            android:background="@drawable/cropmonertingblu"
            android:text="@string/Sub_Plantation" />

        <TextView
            android:id="@+id/tv_Postpantation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/itcavantagradestdbk"
            android:background="@drawable/cropmonertingblack"
            android:text="@string/Post_Plantation" />

    </LinearLayout>

    <Button
        android:id="@+id/tvplantgrowth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttanshape"
        android:fontFamily="@font/itcavantagradestdbk"
        android:gravity="center"
        android:text="@string/View_Plant_Growth"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

</LinearLayout>
</ScrollView>