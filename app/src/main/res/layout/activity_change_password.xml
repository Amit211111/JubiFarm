<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Password"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DD1212"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="*"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textSize="@dimen/text_12"
                android:fontFamily="@font/itcavantagradestdbk"
                android:background="@drawable/textviewboader"
                android:singleLine="true"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_5dp"
                android:textColor="#000000">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Confirm_Password"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DD1212"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="*"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <EditText
                android:id="@+id/reg_conf_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textSize="@dimen/text_12"
                android:fontFamily="@font/itcavantagradestdbk"
                android:background="@drawable/textviewboader"
                android:singleLine="true"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_5dp"
                android:textColor="#000000">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/submit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin25"
            android:background="@color/colorAccent"
            android:text="@string/Submit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>