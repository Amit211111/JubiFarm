<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#ECECEC"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayoutsubcrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="8dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/img_tree"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|left"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mango" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/womenid"
                android:layout_width="@dimen/margin120"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Plant_ID"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameWomen"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Plant_Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Category_Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Sub_Crop_Category"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Farmer_Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameHusband"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Land_ID"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_lmp_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:text="@string/Geo_Coordinates"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:layout_gravity="center"
            android:orientation="vertical"

            android:padding="@dimen/_3dp"
            >
            <TextView
                android:id="@+id/tv_Plantid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_sub_category_name"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/namefarmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_landId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_geoCoordinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="@dimen/_2dp"
                android:text=""
                android:textColor="#01579b"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="center"
        >

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>
