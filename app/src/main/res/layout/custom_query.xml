<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:cardBackgroundColor="#ECECEC"

        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutquery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="8dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/img_tree"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|left"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mango" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp">

                    <ImageView

                        android:layout_width="@dimen/_15dp"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <TextView
                        android:id="@+id/tv_FormerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="Mr. Raam Janki Sharma"
                        android:textColor="#01579b"

                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingLeft="2dp">

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/query" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <TextView
                            android:id="@+id/tv_query"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:padding="3dp"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:text="Banana Plant Growth Is not good so please help me "
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/tv_response"
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/primary_dark"
                            android:gravity="center"
                            android:text="@string/Responsed"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp">

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:src="@drawable/ic_baseline_date_range_24" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:padding="3dp"
                        android:paddingLeft="2dp"
                        android:text="12/09/2020,3:00 PM"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <!--                    <ImageView-->

                    <!--                        android:layout_width="@dimen/_15dp"-->
                    <!--                        android:layout_height="15dp"-->
                    <!--                        android:paddingLeft="@dimen/_3dp"-->
                    <!--                        android:layout_marginTop="@dimen/_3dp"-->
                    <!--                        android:src="@drawable/response" />-->


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:background="@drawable/buttanshapbalck"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:padding="3dp"
                        android:text=" View Response "
                        android:textColor="#FFF"
                        android:textSize="12dp"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>