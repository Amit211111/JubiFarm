<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddPlantGrowthActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_addimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/plant" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_imageadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="7dp"
                android:text="@string/Please_take_image"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="7dp"
                android:text="Crop Selection "
                android:gravity="center|left"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:background="@drawable/textviewboader"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/grow_Crop_selection"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="3dp"
                android:drawSelectorOnTop="true" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_healthy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="7dp"
                android:text="@string/healthy"
                android:gravity="center|left"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_healthy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:gravity="center"
            android:editable="false"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/textviewboader"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="7dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/unhealthy"
                android:gravity="center|left"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_unhealthy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginTop="4dp"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/textviewboader"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/itcavantagradestdbk"
                android:paddingLeft="7dp"
                android:text="@string/dead"
                android:layout_marginTop="@dimen/_5dp"
                android:gravity="center|left"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_dead"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/textviewboader"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginTop="4dp"            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/black"
            android:textSize="13sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:visibility="gone"
            android:background="@drawable/textviewboader"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spnCropStatus"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="3dp"
                android:drawSelectorOnTop="true" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="7dp"
                android:text="@string/Date"
                android:gravity="center|left"
                android:fontFamily="@font/itcavantagradestdbk"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:orientation="vertical">


            <EditText
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35dp"
                android:textSize="12sp"
                android:background="@drawable/textviewboader"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:layout_marginTop="2dp"
                android:text=""
                android:editable="false"
                android:paddingLeft="3dp"
                android:drawSelectorOnTop="true" />




        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:paddingLeft="7dp"
            android:text="@string/Remarks"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/black"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/et_remarks"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="7dp"
            android:hint="@string/Somthing_Write_here"
            android:gravity="center"
            android:background="@drawable/textviewboader"
            android:layout_marginHorizontal="@dimen/_40dp"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/tvplantgrowth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="40dp"
            android:background="#08B"
            android:gravity="center"
            android:text="@string/SUBMIT_PLANT_GROWTH"
            android:textColor="@android:color/white"
            android:fontFamily="@font/itcavantagradestdbk"
            android:textSize="13sp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

        </LinearLayout>


