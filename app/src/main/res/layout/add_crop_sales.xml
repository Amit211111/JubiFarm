<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:editable="false"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:hint="@string/Plant_Name"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_year"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:editable="false"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:hint="Current Year"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:text="2020-21"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_farmer_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:editable="false"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:hint="@string/Farmer_Name"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:hint="@string/qty"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spn_quantity_unit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spn_season"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35dp" />
                <TextView
                    android:id="@+id/tv_season"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:hint="Price(in rupees)"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <EditText
                android:id="@+id/et_plant_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:fontFamily="@font/itcavantagradestdbk"
                android:gravity="center"
                android:hint="@string/planted_date"
                android:inputType="number"
                android:editable="false"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:paddingLeft="@dimen/_5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_10" />


            <EditText
                android:id="@+id/et_fruit_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_weight="1"
                android:background="@drawable/textviewboader"
                android:fontFamily="@font/itcavantagradestdbk"
                android:gravity="center"
                android:hint="@string/fruited_date"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:editable="false"
                android:inputType="number"
                android:paddingLeft="@dimen/_5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_10" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_save_data"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin30"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/green_color"
            android:text="@string/Save_Data"
            android:textColor="@color/white"
            android:textSize="@dimen/margin14"></Button>


    </LinearLayout>


</LinearLayout>