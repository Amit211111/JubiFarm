                    android:id="@+id/et_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_12"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/Contact_Number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD1212"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_contactNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_12">
                </EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/Proprietor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD1212"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_propiretor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:paddingLeft="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:maxLength="50"
                    android:textSize="@dimen/text_12">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
