            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/adharNo"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60dp"
                    android:textSize="@dimen/text_12"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:background="@drawable/textviewboader"
                    android:singleLine="true"
                    android:maxLength="12"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="#000000">
                </EditText>
                <ImageView
                    android:id="@+id/img_aadhar"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/aadhar"
                   />

                <TextView
                    android:id="@+id/aadhar_upload_img"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30dp"
                    android:gravity="center"
                    android:background="#CCC3BEC3"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:layout_marginLeft="@dimen/margin4"
                    android:text="@string/Upload"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8dp"
                android:visibility="gone"
