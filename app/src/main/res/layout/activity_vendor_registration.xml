                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/State"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"
                    android:textColor="#DD1212" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textviewboader"
                android:orientation="vertical"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:padding="4dp">

                <Spinner
                    android:id="@+id/spn_State"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/District"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"
                    android:textColor="#DD1212" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textviewboader"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:padding="4dp">

                <Spinner
                    android:id="@+id/spn_District"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_weight="1"/>

            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="4dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:fontFamily="@font/itcavantagradestdbk"
                       android:text="@string/Vendor_Category"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#DD1212"
                       android:fontFamily="@font/itcavantagradestdbk"
                       android:text="*"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/textviewboader"
                   android:orientation="vertical"
                   >

               <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                   android:id="@+id/spn_vendor"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:hintText="Select Vendor Category">
               </com.androidbuts.multispinnerfilter.MultiSpinnerSearch>
           </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/GSTN"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD1212"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_gstn"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/_60dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewboader"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_5dp"
                    android:maxLength="20"
                    android:textSize="@dimen/text_12">

                </EditText>

                <ImageView
                    android:id="@+id/img_gst"
                    android:layout_width="17dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/gstn"
                   />


                <TextView
                    android:id="@+id/gstn_upload_img"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/margin4"
                    android:layout_weight="1"
                    android:background="#CCC3BEC3"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:gravity="center"
                    android:text="@string/Upload"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/PAN_Card_No"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD1212"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_pancard"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60dp"
                    android:textSize="@dimen/text_12"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:background="@drawable/textviewboader"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_5dp"
                    android:maxLength="10"
                    android:inputType="text"
                    android:textColor="#000000">
                </EditText>
                <ImageView
                    android:id="@+id/img_pan"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:padding="@dimen/_3dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/pan"
                    />

                <TextView
                    android:id="@+id/pan_upload_img"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30dp"
                    android:gravity="center"
                    android:background="#CCC3BEC3"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:layout_marginLeft="@dimen/margin4"
                    android:text="@string/Upload"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="@string/Aadhar_No."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD1212"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:text="*"/>
            </LinearLayout>

