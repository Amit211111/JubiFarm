<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    app:cardBackgroundColor="#ECECEC"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linearLayoutfarmer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_farmerregistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_farmer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center|left"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/farmer_female" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_farmer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mr. Rama Sankar Tiwari"
                    android:singleLine="true"
                    android:textColor="#01579b"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:textSize="12sp" />
<!--                <TextView-->
<!--                    android:id="@+id/txt_set_default"-->
<!--                    android:layout_width="@dimen/margin200"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginRight="@dimen/_2dp"-->
<!--                    android:background="@drawable/viewdetailfarmer"-->
<!--                    android:text="@string/Set_As_Default"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_marginLeft="@dimen/text_14"-->
<!--                    android:fontFamily="@font/itcavantagradestdbk"-->
<!--                    android:textColor="#FFF"-->
<!--                    android:textSize="8sp" />-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/marker"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_farmer_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_3dp"
                    android:text="Gumti No.5 GT Road Kaliyanpur ,District(Kanpur) "
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:textColor="#778899"

                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/phone"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/txt_mobilenoo"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:paddingLeft="@dimen/_3dp"

                    android:text="7834854392"
                    android:textColor="#778899"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/_25dp"-->
                <!--                    android:layout_height="@dimen/_20dp"-->
                <!--                    android:visibility="gone"-->
                <!--                    android:src="@drawable/ic_baseline_location_on_24"-->



                <TextView
                    android:id="@+id/txt_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/viewdetailfarmer"
                    android:text="View Detail"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:textColor="#FFF"
                    android:textSize="8sp" />



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/itcavantagradestdbk"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>