<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    app:cardBackgroundColor="#ECECEC"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_croplaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2dp"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/crd_CM"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#ECECEC"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_tree"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center|left"
                            android:elevation="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mango"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#d3d3d3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="@string/Plant_Name"
                            android:fontFamily="@font/itcavantagradestdbk"

                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_CM_treeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pomegranate "
                            android:fontFamily="@font/itcavantagradestdbk"

                            android:textColor="#01579b"

                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="@string/Total_Number_Of_Plant"
                            android:textStyle="bold"
                            android:fontFamily="@font/itcavantagradestdbk"

                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_CM_treeCount"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="50"
                            android:fontFamily="@font/itcavantagradestdbk"

                            android:textColor="#01579b"

                            android:textSize="11dp" />
                    </LinearLayout>









                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="@dimen/_3dp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

